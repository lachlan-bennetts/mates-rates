FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system mates-rates && \
          adduser --system -G mates-rates mates-rates

COPY apps/mates-rates/dist mates-rates/
RUN chown -R mates-rates:mates-rates .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix mates-rates --omit=dev -f install

CMD [ "node", "mates-rates" ]
